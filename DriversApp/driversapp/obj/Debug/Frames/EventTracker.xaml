<Page
    x:Class="DriversApp.EventTracker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DriversApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFC2E8FF">
        <Border BorderBrush="Black" BorderThickness="3,1,1,1" HorizontalAlignment="Left" Height="768" Margin="960,0,0,0" VerticalAlignment="Top" Width="406" Background="#FFC2E8FF">
            <ListBox x:Name="lstbEvents" HorizontalAlignment="Left" Height="648" VerticalAlignment="Top" Width="406" Margin="-3,-1,-1,0" BorderThickness="2,2,2,5" BorderBrush="#FF5D7889"/>
        </Border>
        <TextBlock x:Name="txtEvent" HorizontalAlignment="Left" Margin="60,50,0,0" TextWrapping="Wrap" Text="Event" VerticalAlignment="Top" Height="61" Width="840" FontSize="50" UseLayoutRounding="True" Foreground="#FF1F497D"/>
        <TextBlock x:Name="txtSnelheid" HorizontalAlignment="Left" Margin="173,140,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="30"  x:Uid="txtSnelheid" Foreground="#FF1F497D" Text="Snelheid"/>
        <TextBlock x:Name="txtVersnelling" HorizontalAlignment="Left" Margin="173,199,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="30" x:Uid="txtVersnelling" Foreground="#FF1F497D" Text="Versnelling"/>
        <TextBlock x:Name="txtAantalUitVoeren" x:Uid="txtAantalUitvoeren" HorizontalAlignment="Left" Margin="173,263,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="30" Foreground="#FF1F497D" Text="Aantal keer uitvoeren" />
        <TextBlock x:Name="txtBaan" HorizontalAlignment="Left" Margin="173,324,0,0" TextWrapping="Wrap" Text="Baan" VerticalAlignment="Top" FontSize="30" x:Uid="txtBaan" Foreground="#FF1F497D"/>
        <Image x:ConnectionId='1' x:Name="pctInfo" HorizontalAlignment="Left" Height="100" Margin="32,649,0,0" VerticalAlignment="Top" Width="100" Source="ms-appx:///Assets/Images/Info.png"                                          />
        <Image x:ConnectionId='2' x:Name="pctPauze" HorizontalAlignment="Left" Height="119" Margin="960,649,0,0" VerticalAlignment="Top" Width="124" Source="ms-appx:///Assets/Images/player_pause.png"                                           />
        <Image x:ConnectionId='3' x:Name="pctVoltooid" HorizontalAlignment="Left" Height="119" Margin="1109,649,0,0" VerticalAlignment="Top" Width="124" Source="ms-appx:///Assets/Images/player_pause.png"                                              />
        <Image x:ConnectionId='4' x:Name="pctStop" HorizontalAlignment="Left" Height="119" Margin="1226,649,0,0" VerticalAlignment="Top" Width="140" Source="ms-appx:///Assets/Images/stop.png" Stretch="Fill"                                          />
        <Image x:ConnectionId='5' x:Name="pctNext" HorizontalAlignment="Left" Height="119" Margin="735,649,0,0" VerticalAlignment="Top" Width="165" Source="ms-appx:///Assets/Images/Next_Arrow.png" Stretch="Fill"                                          />
        <MediaElement x:Name="playSound" Source="ms-appx:///Assets/Sound/test.wav" AutoPlay="False" Height="0" Width="0" Margin="1100,453,249,384" Volume="20"  />
    </Grid>
</Page>

